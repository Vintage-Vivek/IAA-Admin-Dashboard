{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/queries/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/queries",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "@MONGODB_URI",
    "PORT": "@PORT",
    "EMAIL_USER": "@EMAIL_USER",
    "EMAIL_PASS": "@EMAIL_PASS",
    "EMAIL_HOST": "@EMAIL_HOST",
    "EMAIL_PORT": "@EMAIL_PORT",
    "EMAIL_SECURE": "@EMAIL_SECURE"
  }
}

